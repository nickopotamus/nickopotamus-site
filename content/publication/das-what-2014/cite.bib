 language = {eng},
 month = {July},
 number = {7},
 pmcid = {PMC4083136},
 pmid = {25002453},
 shorttitle = {What to do with a non-rolling stone?},
 title = {What to do with a non-rolling stone? Surgical on-table dilemma in large bowel obstruction due to an impacted gallstone},
